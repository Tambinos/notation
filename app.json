{
  "expo": {
    "name": "notation",
    "slug": "notation",
    "plugins": [
      [
        "expo-location",
        {
          "isAndroidBackgroundLocationEnabled": true
        }
      ],
      "expo-notifications"
    ],
    "android": {
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE"
      ]
    },
    "ios": {
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "App braucht Standort für ortsbezogene Erinnerungen.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Hintergrund-Geofencing für Erinnerungen.",
        "NSUserTrackingUsageDescription": "Wird nicht zum Tracking genutzt, nur für Benachrichtigungen.",
        "UIBackgroundModes": [
          "location",
          "processing"
        ]
      }
    }
  }
}